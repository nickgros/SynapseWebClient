<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>
  <g:FlowPanel addStyleNames="max-width-350 center-in-div form-horizontal">
    <b:Heading
      size="H4"
      subText="Set your new Synapse account password"
      addStyleNames="text-align-center margin-top-20"
    />
    <g:FlowPanel>
      <b:Input
        ui:field="password1Field"
        type="PASSWORD"
        placeholder="Enter new password"
        addStyleNames="margin-top-20 whiteBackground"
        autoComplete="false"
      />
      <b:Input
        ui:field="password2Field"
        type="PASSWORD"
        placeholder="Confirm new password"
        addStyleNames="margin-top-20 whiteBackground"
        autoComplete="false"
      />
      <b:Button
        ui:field="changePasswordBtn"
        size="LARGE"
        type="DEFAULT"
        text="Change Password"
        width="100%"
        marginTop="15"
      />
    </g:FlowPanel>
    <g:FlowPanel>
      <g:SimplePanel ui:field="passwordSynAlertPanel" />
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
