<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
>
  <g:FlowPanel width="100%">
    <g:FlowPanel ui:field="blockUI" width="100%">
      <g:FlowPanel addStyleNames="margin-bottom-10">
        <b:TextBox ui:field="emailAddressField" height="43px" width="100%" />
      </g:FlowPanel>
      <b:Button
        ui:field="registerBtn"
        text="Send registration info"
        size="LARGE"
        type="SUCCESS"
        width="100%"
      />
    </g:FlowPanel>
    <g:FlowPanel ui:field="synAlertContainer" />
  </g:FlowPanel>
</ui:UiBinder>
