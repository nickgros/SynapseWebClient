<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
  xmlns:w="urn:import:org.sagebionetworks.web.client.widget"
>
  <!-- progress bar -->
  <g:FlowPanel addStyleNames="flexcontainer-column">
    <g:FlowPanel>
      <g:FlowPanel ui:field="title" addStyleNames="center" />
    </g:FlowPanel>
    <g:FlowPanel ui:field="progressColumn" visible="false">
      <b:Progress addStyleNames="center-in-div">
        <b:ProgressBar
          ui:field="progressBar"
          type="INFO"
          percent="0"
          text="0%"
        />
      </b:Progress>
    </g:FlowPanel>
    <g:FlowPanel ui:field="spinnerColumn" visible="false">
      <w:LoadingSpinner
        ui:field="spinner"
        size="45px"
        addStyleNames="center-in-div"
      />
      <g:FlowPanel addStyleNames="margin-top-10 center">
        <bh:Text>Loading...</bh:Text>
      </g:FlowPanel>
    </g:FlowPanel>
    <g:FlowPanel>
      <g:FlowPanel ui:field="message" addStyleNames="center" />
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
