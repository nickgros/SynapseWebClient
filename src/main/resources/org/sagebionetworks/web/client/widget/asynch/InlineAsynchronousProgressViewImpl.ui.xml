<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:w="urn:import:org.sagebionetworks.web.client.widget"
>
  <g:FlowPanel addStyleNames="flexcontainer-row" width="100%">
    <g:FlowPanel
      ui:field="spinnerColumn"
      visible="false"
      addStyleNames="inline-block"
    >
      <w:LoadingSpinner
        ui:field="spinner"
        size="45px"
        addStyleNames="inline-block"
      />
    </g:FlowPanel>
    <g:FlowPanel
      addStyleNames="font-size-15 inline-block"
      ui:field="title"
      addStyleDependentNames="margin-top-12 margin-left-15"
    />
    <g:FlowPanel
      addStyleNames="font-size-15 hidden-xs inline-block"
      ui:field="message"
      addStyleDependentNames="margin-top-12 margin-left-20"
      height="60px"
    />
    <g:FlowPanel ui:field="progressColumn" visible="false">
      <b:Progress addStyleNames="center-in-div">
        <b:ProgressBar
          ui:field="progressBar"
          type="INFO"
          percent="0"
          text="0%"
        />
      </b:Progress>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
