<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>
  <g:FlowPanel>
    <b:TextBox ui:field="replyTextBox" placeholder="Write a reply..." />
    <g:FlowPanel
      ui:field="newReplyContainer"
      visible="false"
      addStyleNames="margin-top-10 margin-bottom-40"
    >
      <g:FlowPanel ui:field="markdownEditorContainer" />
      <b:Button
        ui:field="saveButton"
        type="PRIMARY"
        dataLoadingText="Posting..."
        text="Post"
        addStyleNames="margin-right-5 margin-top-5"
        pull="RIGHT"
      />
      <b:Button
        ui:field="cancelButton"
        type="LINK"
        text="Cancel"
        addStyleNames="margin-right-5 margin-top-5"
        pull="RIGHT"
      />
    </g:FlowPanel>
    <g:FlowPanel ui:field="synAlert" />
  </g:FlowPanel>
</ui:UiBinder>
