<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
>
  <ui:with
    field='sageImageBundle'
    type='org.sagebionetworks.web.client.SageImageBundle'
  />

  <g:FlowPanel>
    <!-- Dialog for revoking user -->
    <b:Modal
      ui:field="modal"
      title="Revoke User Access"
      closable="true"
      dataBackdrop="STATIC"
      dataKeyboard="true"
    >
      <b:ModalBody>
        <g:FlowPanel addStyleNames="margin-top-10 margin-bottom-10">
          <b:Heading
            size="H5"
            text="User"
            addStyleNames="margin-left-10 margin-right-10 margin-top-20"
          />
          <g:FlowPanel ui:field="userSelectContainer" />
        </g:FlowPanel>
        <g:FlowPanel
          ui:field="synAlertContainer"
          addStyleNames="margin-top-10"
        />
        <b:Alert type="WARNING" addStyleNames="margin-top-10">
          <bh:Strong text="Note &nbsp;" />
          <bh:Text
            text=" Removing user access does not automatically send an email to that user."
          />
        </b:Alert>
      </b:ModalBody>
      <b:ModalFooter>
        <b:Button ui:field="cancelButton" type="LINK" text="Cancel" />
        <b:Button
          ui:field="revokeButton"
          type="DANGER"
          dataLoadingText="Loading..."
          text="Revoke Access"
        />
      </b:ModalFooter>
    </b:Modal>
  </g:FlowPanel>
</ui:UiBinder>
