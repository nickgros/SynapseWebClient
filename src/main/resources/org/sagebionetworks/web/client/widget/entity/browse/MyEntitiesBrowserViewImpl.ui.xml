<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
>
  <g:HTMLPanel>
    <!-- Tabs -->
    <div>
      <ul class="nav nav-tabs">
        <li class="active finder-tab" ui:field="myProjectsListItem">
          <g:Anchor
            styleName="text-align-center no-background"
            ui:field="myProjectsLink"
            text="My Projects"
          />
        </li>
        <li class="finder-tab" ui:field="currentContextListItem">
          <g:Anchor
            styleName="text-align-center link no-background"
            ui:field="currentContextLink"
            text="Current Project"
          />
        </li>
        <li class="finder-tab" ui:field="myFavoritesListItem">
          <g:Anchor
            styleName="text-align-center link no-background"
            ui:field="myFavoritesLink"
            text="My Favorites"
          />
        </li>
      </ul>
    </div>
    <g:FlowPanel
      ui:field="currentContextTabContents"
      addStyleNames="panel margin-top-15"
    >
      <g:SimplePanel ui:field="currentContextContainer" />
    </g:FlowPanel>
    <g:FlowPanel
      ui:field="myProjectsTabContents"
      addStyleNames="panel margin-top-15"
    >
      <g:SimplePanel ui:field="myProjectsContainer" />
    </g:FlowPanel>
    <g:FlowPanel
      ui:field="myFavoritesTabContents"
      addStyleNames="panel margin-top-15"
    >
      <g:SimplePanel ui:field="myFavoritesContainer" />
    </g:FlowPanel>
  </g:HTMLPanel>
</ui:UiBinder>
