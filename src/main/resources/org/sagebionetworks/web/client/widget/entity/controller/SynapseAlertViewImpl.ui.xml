<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:org.sagebionetworks.web.client.widget"
>
  <g:FlowPanel>
    <g:FlowPanel ui:field="loginWidgetContainer">
      <w:FullWidthAlert
        message="You will need to sign in to access this resource."
        primaryCTAText="Sign In"
        primaryCTAHrefTargetSelf="/LoginPlace:0"
        alertType="INFO"
        global="false"
      />
    </g:FlowPanel>

    <w:FullWidthAlert ui:field="alert" alertType="DANGER" global="false" />

    <g:FlowPanel ui:field="jiraDialogContainer" />
  </g:FlowPanel>
</ui:UiBinder>
