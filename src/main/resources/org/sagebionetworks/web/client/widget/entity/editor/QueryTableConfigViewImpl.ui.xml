<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
>
  <g:FlowPanel>
    <g:FlowPanel>
      <b:FieldSet>
        <b:FormGroup>
          <b:FormLabel for="query">Query</b:FormLabel>
          <b:TextBox ui:field="queryField" name="query" b:id="query" />
          <b:Button
            ui:field="autoAddColumns"
            icon="REFRESH"
            addStyleNames="margin-top-10"
            text="Refresh Columns"
          />
        </b:FormGroup>
        <b:FormGroup>
          <b:CheckBox ui:field="isPagingField" text="Support pagination" />
        </b:FormGroup>
      </b:FieldSet>
    </g:FlowPanel>
    <g:SimplePanel ui:field="columnManagerContainer" />
  </g:FlowPanel>
</ui:UiBinder>
