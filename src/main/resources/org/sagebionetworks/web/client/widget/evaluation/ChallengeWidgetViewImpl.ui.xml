<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>
  <g:FlowPanel>
    <b:Panel ui:field="challengeUI">
      <b:Heading size="H3" text="Challenge" />
      <g:FlowPanel addStyleNames="padding-bottom-15 displayTable" width="100%">
        <g:FlowPanel addStyleNames="displayTableRow">
          <g:FlowPanel addStyleNames="displayTableCell" width="150px">
            <b:Heading
              size="H5"
              text="Challenge Name"
              addStyleNames="displayInlineBlock lightGreyText margin-right-30"
            />
          </g:FlowPanel>
          <g:FlowPanel addStyleNames="displayTableCell">
            <b:Heading
              size="H5"
              ui:field="challengeNameHeading"
              addStyleNames="displayInlineBlock"
            />
          </g:FlowPanel>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="displayTableRow">
          <g:FlowPanel addStyleNames="displayTableCell" width="150px">
            <b:Heading
              size="H5"
              text="Challenge ID"
              addStyleNames="displayInlineBlock lightGreyText margin-right-30"
            />
          </g:FlowPanel>
          <g:FlowPanel addStyleNames="displayTableCell">
            <b:Heading
              size="H5"
              ui:field="challengeIdHeading"
              addStyleNames="displayInlineBlock"
            />
          </g:FlowPanel>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="displayTableRow">
          <g:FlowPanel addStyleNames="displayTableCell" width="150px">
            <b:Heading
              size="H5"
              text="Team"
              addStyleNames="displayInlineBlock lightGreyText margin-right-30"
            />
          </g:FlowPanel>

          <g:FlowPanel addStyleNames="displayTableCell">
            <b:Heading
              size="H5"
              text="Registered participant's team"
              addStyleNames="displayInlineBlock margin-right-10"
            />
            <b:Anchor ui:field="editTeam" text="Edit Team" />
            <g:FlowPanel
              ui:field="teamWidgetContainer"
              addStyleNames="border-top-6-synapse-blue border-left-1 border-right-1 border-bottom-1"
            />
          </g:FlowPanel>
        </g:FlowPanel>
      </g:FlowPanel>
    </b:Panel>
    <g:FlowPanel ui:field="selectTeamModalContainer" />
    <g:FlowPanel ui:field="widgetsContainer" />
  </g:FlowPanel>
</ui:UiBinder>
