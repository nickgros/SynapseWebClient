<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>
  <ui:with
    field='sageImageBundle'
    type='org.sagebionetworks.web.client.SageImageBundle'
  />
  <g:HTMLPanel>
    <b:Icon
      ui:field="defaultIcon"
      type="SYN_USER"
      addStyleNames="font-size-80 lightGreyText"
      visible="true"
    />
    <g:HTMLPanel width="80px" addStyleNames="position-relative">
      <g:FlowPanel addStyleNames="position-absolute topLevelZIndex">
        <b:Button
          ui:field="removePicture"
          icon="TIMES"
          size="EXTRA_SMALL"
          type="LINK"
        />
      </g:FlowPanel>
      <b:Image
        ui:field="image"
        width="80px"
        visible="false"
        addStyleNames="img-circle"
      />
    </g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder>
