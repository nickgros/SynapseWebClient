<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
  xmlns:w="urn:import:org.sagebionetworks.web.client.widget"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
>
  <g:FlowPanel>
    <g:FlowPanel
      ui:field="isPublicAndOpen"
      visible="false"
      addStyleNames="margin-top-10 margin-bottom-20"
    >
      <bh:Paragraph marginBottom="0">
        <w:IconSvg
          icon="checkCircle"
          addStyleNames="synapse-green displayInline margin-right-5 moveup-3"
        />
        <bh:Strong>This is anonymous access data</bh:Strong>
      </bh:Paragraph>
      <bh:Paragraph addStyleNames="lightGreyText" marginLeft="33">
        Anyone can download it, even if they arenâ€™t logged in to Synapse.
      </bh:Paragraph>
    </g:FlowPanel>
    <g:FlowPanel
      ui:field="isPublicAndAdmin"
      visible="false"
      addStyleNames="margin-top-5 margin-bottom-15"
    >
      <g:FlowPanel
        addStyleNames="lightGreyBackground padding-top-20 padding-right-20 padding-bottom-10 padding-left-20"
      >
        <bh:Paragraph marginBottom="0">
          <bh:Strong>
            Users must be logged in to download public access data.
          </bh:Strong>
        </bh:Paragraph>
        <bh:Paragraph addStyleNames="lightGreyText">
          This data is publicly viewable, but only registered and logged-in
          users can download it.
        </bh:Paragraph>
      </g:FlowPanel>
    </g:FlowPanel>
    <g:FlowPanel
      ui:field="isPrivateAndOpenAndAdmin"
      visible="false"
      addStyleNames="margin-top-10 margin-bottom-15"
    >
      <g:FlowPanel
        addStyleNames="lightGreyBackground padding-top-20 padding-right-20 padding-bottom-10 padding-left-20"
      >
        <bh:Paragraph marginBottom="0">
          <bh:Strong>This is not anonymous access data.</bh:Strong>
        </bh:Paragraph>
        <bh:Paragraph addStyleNames="lightGreyText">
          You must grant public access for all users to be able to anonymously
	        download it.
        </bh:Paragraph>
      </g:FlowPanel>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
