<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:w="urn:import:org.sagebionetworks.web.client.widget"
>
  <b:FormGroup addStyleNames="margin-top-10">
    <b:FormLabel>Include in View</b:FormLabel>
    <w:HelpWidget
      helpMarkdown="A view is a type of Synapse Table that queries across metadata (Annotations) for particular items (files, folders, tables) with a particular “scope”."
      href="https://help.synapse.org/docs/Views.2011070739.html"
      addStyleNames="margin-left-5"
    />
    <g:FlowPanel addStyleNames="margin-left-15">
      <b:CheckBox ui:field="includeFilesCb" text="Files" value="true" />
      <b:CheckBox ui:field="includeFoldersCb" text="Folders" />
      <b:CheckBox ui:field="includeTablesCb" text="Tables" />
      <b:CheckBox ui:field="includeDatasetsCb" text="Datasets" />
    </g:FlowPanel>
  </b:FormGroup>
</ui:UiBinder>
