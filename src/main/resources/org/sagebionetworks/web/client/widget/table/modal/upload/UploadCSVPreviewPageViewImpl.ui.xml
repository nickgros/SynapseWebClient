<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>
  <ui:with
    field='sageImageBundle'
    type='org.sagebionetworks.web.client.SageImageBundle'
  />

  <g:HTMLPanel>
    <g:SimplePanel ui:field="previewPanel" />
    <g:SimplePanel ui:field="trackerPanel" />
    <g:FlowPanel styleName="margin-top-15" />
    <b:Button ui:field="optionsButton" text="Options" />
    <g:FlowPanel styleName="margin-top-15" />
    <g:SimplePanel ui:field="optionsPanel" visible="false" />
  </g:HTMLPanel>
</ui:UiBinder>
